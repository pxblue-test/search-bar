{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules/", "babel.config.js", "metro.config.js", "jest.config.js"]
}
